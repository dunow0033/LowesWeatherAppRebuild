<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <style name="EditTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:titleMarginTop">40dp</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:shape">?shapeAppearanceMediumComponent</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white_50</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    <style name="Temperature">
        <item name="android:padding">30dp</item>
        <item name="android:textAppearance">?textAppearanceHeadline1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">75sp</item>
    </style>
    <style name="FeelsLike">
        <item name="android:paddingBottom">25dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textAppearance">?textAppearanceHeadline4</item>
    </style>
    <style name="Description">
        <item name="android:paddingTop">25dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Body2</item>
    </style>
    <style name="Description.Main">
        <item name="android:gravity">top|start</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Body2.Feels</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="background">?android:attr/listDivider</item>
        <item name="color">@color/black_900</item>
    </style>
    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>
    <!-- Toolbar theme -->
    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!--        <item name="android:drawableStart">@drawable/ic_white_back_arrow</item>-->
        <item name="expandedTitleGravity">center</item>
        <item name="colorPrimary">@color/white_50</item>
        <item name="colorOnPrimary">@color/white_50</item>1
    </style>
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/black_800</item>
        <item name="colorPrimaryVariant">@color/black_800</item>
        <item name="colorOnPrimary">@color/white_50</item>
    </style>
</resources>